{
  "name": "ignite",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "dev:cms": "npm run develop --workspace apps/cms",
    "dev": "concurrently -k \"npm:dev:web\" \"npm:dev:cms\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
