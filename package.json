{
  "name": "ignite",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/studio",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "dev:studio": "npm run dev --workspace apps/studio",
    "dev": "concurrently -k \"npm:dev:web\" \"npm:dev:studio\"",
    "seed:sanity": "node apps/studio/scripts/seed.js",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.2.0"
  }
}
